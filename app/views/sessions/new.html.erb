<div class="container margin">
  <h2> Sign In </h2>

  <%= form_tag(sessions_path, html: {class: 'form-horizontal'}) do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'Sign In', class:"btn btn-primary" %>
  <% end %>

  <%#= link_to 'Forgot password? Click here', new_password_path %>
</div>