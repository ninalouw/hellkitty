<div class ="container">
    <div class = "row">
      <div class = "col-md-12">
        <h2><%= @portfolio.title %></h2>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-2">
       <p>By: &nbsp<%= @portfolio.user_full_name %></p>
      </div>
      <div class = "col-md-10">
        <%= @portfolio.created_at.strftime("%d %b %Y") %>
      </div>
    </div>

      <div class="row">
        <div class="col-md-12">
          <h4>
            <%= @portfolio.portfolio_category.title %>
          </h4>
        </div>
      </div>
      
    <div class = "row">
      <div class = "col-md-12 gallery-body">
        <%= @portfolio.body %>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-12">
      <% if can? :manage, @portfolio  %>
        <%= link_to 'Edit', edit_portfolio_path(@portfolio),class: 'btn btn-info' %>
        <%= link_to 'Delete', portfolio_path(@portfolio), method: :delete,
                                              data:{confirm: 'Are you sure you want to delete?'},class: 'btn btn-danger'  %>
      <% end %>
     </div>
    </div>
</div>